---
import Icon from './Icon.astro';
---

<header class="sticky top-0 z-50 w-full bg-white/90 backdrop-blur-md border-b border-gray-100">
  <div class="max-w-[1440px] mx-auto px-6 h-20 flex items-center justify-between gap-8">
    <div class="flex items-center gap-12">
      <a href="/" class="flex items-center gap-3">
        <img src="/images/mambbu-logo.png" alt="Mambbu logo" class="h-10 w-auto" />
        <div class="flex flex-col">
          <h1 class="text-2xl font-serif font-bold tracking-tight text-primary">Mambbu</h1>
          <span class="text-[8px] tracking-[0.3em] uppercase text-gray-400">Cuba Real Estate</span>
        </div>
      </a>
      <nav class="hidden lg:flex items-center gap-8">
        <a
          class="text-sm font-semibold hover:text-sea-glass transition-colors uppercase tracking-wider"
          href="/propiedades">Comprar</a
        >
        <a
          class="text-sm font-semibold hover:text-sea-glass transition-colors uppercase tracking-wider"
          href="/propiedades">Alquilar</a
        >
        <a
          class="text-sm font-semibold hover:text-sea-glass transition-colors uppercase tracking-wider"
          href="#">Publicar</a
        >
      </nav>
    </div>

    <div class="flex items-center gap-4">
      <button
        class="hidden md:block text-sm font-bold uppercase tracking-wider border-b-2 border-primary pb-1 hover:text-sea-glass hover:border-sea-glass transition-all"
      >
        Para Agencias
      </button>
      <button class="p-2 text-primary hover:text-cuba-red transition-colors">
        <Icon name="heart" size={24} />
      </button>
      <div class="size-10 rounded-full overflow-hidden border-2 border-sea-glass p-0.5">
        <img
          class="w-full h-full object-cover rounded-full"
          src="/images/team.jpg"
          alt="User avatar"
        />
      </div>
    </div>
  </div>
</header>
