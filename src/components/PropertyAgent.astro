---
import type { Agent } from '../types/property';
import Icon from './Icon.astro';

export interface Props {
  agent: Agent;
}

const { agent } = Astro.props;
---

<aside class="w-full lg:w-96">
  <div class="sticky top-28 space-y-6">
    <!-- Agent Card -->
    <div class="bg-white postcard-border p-8">
      <div class="flex items-center gap-4 mb-6">
        <div class="relative">
          <div class="size-16 rounded-full overflow-hidden border-2 border-sea-glass">
            <img class="w-full h-full object-cover" src={agent.avatar} alt={agent.name} />
          </div>
          <div class="absolute -bottom-1 -right-1 bg-sea-glass text-white rounded-full p-1">
            <Icon name="verified" size={12} />
          </div>
        </div>
        <div>
          <h5 class="font-bold text-lg">{agent.name}</h5>
          <p class="text-sm text-gray-500 font-serif italic">Agente Principal</p>
          <div class="flex items-center gap-1 mt-1">
            <span class="text-xs text-amber-500">{'★'.repeat(agent.rating)}</span>
            <span class="text-xs text-gray-400">({agent.reviews} reseñas)</span>
          </div>
        </div>
      </div>

      <div class="space-y-3 mb-6 pb-6 border-b border-gray-100 text-sm">
        <div class="flex justify-between">
          <span class="text-gray-500">Tiempo de respuesta</span>
          <span class="font-bold">{agent.responseTime}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Propiedades activas</span>
          <span class="font-bold">{agent.activeListings} anuncios</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Ventas cerradas</span>
          <span class="font-bold">{agent.salesClosed} en 2024</span>
        </div>
      </div>

      <div class="space-y-3">
        {
          agent.whatsapp && (
            <button class="w-full bg-primary text-white font-bold py-4 px-6 hover:bg-primary/95 transition-all shadow-lg flex items-center justify-center gap-2">
              <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L0 24l6.335-1.662c1.72.937 3.659 1.432 5.628 1.433h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
              </svg>
              WhatsApp a {agent.name.split(' ')[0]}
            </button>
          )
        }
        <button
          class="w-full border-2 border-gray-200 text-primary font-bold py-4 px-6 hover:bg-gray-50 transition-all uppercase tracking-wider text-sm"
        >
          Solicitar Visita
        </button>
        <button
          class="w-full border-2 border-gray-200 text-primary font-bold py-4 px-6 hover:bg-gray-50 transition-all uppercase tracking-wider text-sm"
        >
          Enviar Mensaje
        </button>
      </div>
    </div>

    <!-- Price Insight -->
    <div class="bg-sea-glass/10 border-2 border-sea-glass/30 p-6 postcard-border">
      <div class="flex items-start gap-3 mb-3">
        <Icon name="info" class="text-sea-glass" size={24} />
        <div>
          <h6 class="font-bold text-sm mb-1 uppercase tracking-wider">Análisis de Precio</h6>
          <p class="text-sm text-gray-600 leading-relaxed">
            Esta propiedad está valorada competitivamente para propiedades similares en la zona.
          </p>
        </div>
      </div>
    </div>
  </div>
</aside>
